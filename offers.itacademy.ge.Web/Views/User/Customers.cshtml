@model IEnumerable<offers.itacademy.ge.Application.Models.Users.Customer.CustomerResponseModel>

@{
    ViewData["Title"] = "Manage Customers";
    int pageNumber = ViewBag.PageNumber ?? 1;
    int pageSize = ViewBag.PageSize ?? 10;
}

<div class="container">
    <h2 class="mt-4">Manage Customers</h2>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="3">No customers found.</td>
                </tr>
            }
            else
            {
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.Id</td>
                        <td>@customer.UserName</td>
                        <td>@customer.Email</td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation" class="mt-3">
        <ul class="pagination justify-content-end">
            <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Customers" asp-route-pageNumber="@(pageNumber - 1)" asp-route-pageSize="@pageSize">Previous</a>
            </li>
            <li class="page-item @(Model.Count() < pageSize ? "disabled" : "")">
                <a class="page-link" asp-action="Customers" asp-route-pageNumber="@(pageNumber + 1)" asp-route-pageSize="@pageSize">Next</a>
            </li>
        </ul>
    </nav>
</div>