@model offers.itacademy.ge.Application.Models.ProductOffers.ProductOfferResponseModel

@{
    ViewData["Title"] = "Purchase Offer";
}

<div class="container">
    <h2 class="mt-4">Purchase Offer</h2>
    <p>Buy: @Model.Name</p>
    <dl class="row">
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Available Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
    </dl>

    <form asp-action="Buy" asp-route-offerId="@Model.Id" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="form-group mb-3">
            <label for="quantity" class="form-label">Quantity</label>
            <input type="number" name="quantity" min="1" max="@Model.Quantity" class="form-control" placeholder="Enter quantity" required />
        </div>
        <button type="submit" class="btn btn-primary">Buy Now</button>
        <a asp-controller="ProductOffer" asp-action="ActiveOffers" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>