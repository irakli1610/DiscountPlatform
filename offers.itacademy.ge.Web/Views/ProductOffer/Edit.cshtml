@model offers.itacademy.ge.Application.Models.ProductOffers.ProductOfferRequestModel

@{
    ViewData["Title"] = "Edit Product Offer";
    string imageUrl = ViewBag.ImageUrl;
}

<div class="container">
    <h2 class="mt-4">Edit Product Offer</h2>
    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="mt-3">
        <input type="hidden" asp-for="CategoryId" />
        <div asp-validation-summary="All" class="text-danger mb-3"></div>
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" type="number" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="ExpirationTime" class="form-label"></label>
            <input asp-for="ExpirationTime" type="datetime-local" class="form-control" />
            <span asp-validation-for="ExpirationTime" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Offer Image</label>
            @if (!string.IsNullOrEmpty(imageUrl))
            {
                <div class="mb-2">
                    <img src="/uploads/offers/@imageUrl" alt="Current Offer Image" class="img-fluid" style="max-height: 200px;" />
                </div>
            }
            <input type="file" name="imageFile" class="form-control" accept="image/*" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="MyOffers" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}