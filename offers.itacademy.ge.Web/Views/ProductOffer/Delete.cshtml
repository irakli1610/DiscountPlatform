@model offers.itacademy.ge.Application.Models.ProductOffers.ProductOfferResponseModel

@{
    ViewData["Title"] = "Delete Product Offer";
}

<div class="container">
    <h2 class="mt-4">Delete Product Offer</h2>
    <p>Are you sure you want to delete this offer?</p>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <dl class="row">
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="/uploads/offers/@Model.ImageUrl" alt="@Model.Name" style="max-height: 100px;" />
            }
            else
            {
                <span>No Image</span>
            }
        </dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="MyOffers" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>